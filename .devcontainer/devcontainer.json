{
    "name": "dotswt-devcontainer",
    "image": "mcr.microsoft.com/devcontainers/base:bullseye",
    "features": {
        "ghcr.io/devcontainers/features/nix:1": {
            // https://github.com/devcontainers/features/blob/main/src/nix/README.md
            // https://github.com/radxa-pkg/aic8800/blob/f82c5a87/.devcontainer/devcontainer.json
            "version": "latest",
            "packages": "nixd,nil,nixfmt",
            "useAttributePath": true,
            "extraNixConfig": [
                "experimental-features = nix-command flakes",
                "trusted-users = root vscode"
            ]
        }
    },
    // As of February 2026, 
    // nix packages defined in "packages" of nix feature
    // are installed, but not exposed to $PATH
    // unless i define the same package list in environment variable
    "containerEnv": {
        "PACKAGES": "nixd,nil,nixfmt"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "antcap96.xresources",
                "DavidAnson.vscode-markdownlint",
                "eamodio.gitlens",
                "fireblast.hyprlang-vscode",
                "jnoortheen.nix-ide",
                "ms-vscode.PowerShell",
                "yzhang.markdown-all-in-one"
            ],
            "settings": {
                "nix.serverPath": "nixd",
                "nix.formatterPath": "nixfmt"
            }
        }
    },
    "remoteUser": "root"
}